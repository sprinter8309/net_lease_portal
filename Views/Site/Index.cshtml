@{
    ViewData["Title"] = "Аренда автомобилей";
}
@model SearchNavigator.Models.SiteIndexModel

<div class="main-page-container">
    <h2 class="main-page-label">Наши филиалы в городах:</h2>
    <div class="city-item-container">        
        @foreach (var cityItem in Model.cities)
        {                   
            <div class="city-item-block">
                <div class="city-item-block-image"><img src="@cityItem.PreviewImage" class="item-image"></div>
                <div class="city-item-block-name dark-color-link">@Html.ActionLink(cityItem.Name, "single", "city", new { id = cityItem.Id })</div>               
            </div>       
        }       
    </div>

    <h2 class="main-page-label">Доступные автомобили</h2>
    <div class="car-item-container">       
        @foreach (var carItem in Model.cars)
        {
            <a asp-controller="Car" asp-action="Single" asp-route-id="@carItem.Id">
                <div class="car-item-block">
                    <div class="car-item-block-image"><img src="@carItem.PreviewImage" class="item-image"></div>
                    <div class="car-item-block-info">
                        <div class="car-item-block-model-name dark-color-link">
                            @carItem.Brand.Name @carItem.Model
                        </div>
                        <div class="car-item-block-info-line">
                            Город: @carItem.City.Name
                        </div>
                        <div class="car-item-block-info-line">
                            Год выпуска: @carItem.IssueYear
                        </div>
                        <div class="car-item-block-info-line">
                            Мощность: @carItem.EnginePower л.с.
                        </div>
                        <div class="car-item-block-info-line">
                            Цена: от @carItem.LeaseRate.ToString("F0") руб./сутки
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
